<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@android:color/white">

    <Button
        android:id="@+id/create_handler"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="createHandler" />

    <Button
        android:id="@+id/send_message"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="sendMessage"
        app:layout_constraintTop_toBottomOf="@id/create_handler" />

    <Button
        android:id="@+id/send_delay_message"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Send Delay Message"
        app:layout_constraintLeft_toLeftOf="parent"
        app:layout_constraintTop_toBottomOf="@id/send_message" />

    <Button
        android:id="@+id/remove_message"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Remove Message"
        app:layout_constraintLeft_toLeftOf="parent"
        app:layout_constraintTop_toBottomOf="@id/send_delay_message" />
</androidx.constraintlayout.widget.ConstraintLayout>
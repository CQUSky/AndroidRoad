<?xml version="1.0" encoding="utf-8"?>
<android.support.constraint.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@color/white">

    <Button
        android:id="@+id/get_repo"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Get Repo"
        app:layout_constraintTop_toTopOf="parent" />

    <Button
        android:id="@+id/module_pay"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="to pay"
        app:layout_constraintLeft_toRightOf="@id/get_repo"
        app:layout_constraintTop_toTopOf="parent" />

    <Button
        android:id="@+id/service_pay"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="pay service"
        app:layout_constraintLeft_toRightOf="@id/module_pay"
        app:layout_constraintTop_toTopOf="parent" />

    <android.support.v7.widget.RecyclerView
        android:id="@+id/recycle_view"
        android:layout_width="match_parent"
        android:layout_height="0dp"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintTop_toBottomOf="@id/get_repo" />
</android.support.constraint.ConstraintLayout>